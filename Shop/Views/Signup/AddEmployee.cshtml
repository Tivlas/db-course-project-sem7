@model (Shop.Models.Employee Employee, IEnumerable<EmployeeRole> Roles)

<form method="post" action="/Signup/AddEmployee">
	<label for="firstName">First Name:</label>
	<input type="text" id="firstName" name="FirstName" />

	<label for="lastName">Last Name:</label>
	<input type="text" id="lastName" name="LastName" />

	<label for="salary">Salary:</label>
	<input type="number" id="salary" name="Salary" />

	<label for="phone">Phone:</label>
	<input type="text" id="phone" name="Phone" />

	<label for="position">Position:</label>
	<input type="text" id="position" name="Position" />

	<label for="password">Password:</label>
	<input type="password" id="password" name="Password" />

	<label for="email">Email:</label>
	<input type="email" id="email" name="Email" />

	<label for="employeeRoleId">Role:</label>
	<select id="employeeRoleId" name="EmployeeRoleId">
		@foreach (var role in Model.Roles)
		{
			<option value="@role.EmployeeRoleId">@role.Name</option>
		}
	</select>

	<button type="submit">Add</button>
</form>

@if (TempData.ContainsKey("ErrorMessage"))
{
	<div class="alert alert-danger">
		@TempData["ErrorMessage"]
	</div>
}